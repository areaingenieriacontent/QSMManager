@model IEnumerable<QSM_Manager.Models.usuario>

@{
    ViewBag.Title = "Usuarios";
}

<h2>Usuarios Registrados</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.nombres)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.apellidos)
        </th>
        <th>
            Documento
        </th>
        <th>
            @Html.DisplayNameFor(model => model.sexo)
        </th>
        <th>
            Fecha de registro
        </th>
        <th>
            último ingreso
        </th>
        <th>
            @Html.DisplayNameFor(model => model.correo)
        </th>
        <th>
            Empresa
        </th>
        <th>
            Grupo
        </th>
        <th>
            Tipo de usuario
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.nombres)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.apellidos)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.documento_identificacion)
        </td>
        <td>
            @if (item.sexo == 0)
            {
                <text>Mujer</text>
            }
            else if (item.sexo == 1)
            {
                <text>Hombre</text>
            }
            else
            {
                <text>No registra</text>
            }
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.fecha_registro)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ultimo_ingreso)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.correo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.empresa.nombre_empresa)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Grupo.nombre_grupo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.tipo_usuario.nombre_tipo_usuario)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id = item.usuario_id }) |
            @Html.ActionLink("Borrar", "Delete", new { id = item.usuario_id })
        </td>
    </tr>
}

</table>
