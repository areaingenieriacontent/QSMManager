@model IEnumerable<QSM_Manager.Models.usuario>
@{
    ViewBag.Title = "Index";
}

<h2>Lista de usuarios</h2>
<div class="dl-horizontal">
    <p>
        @Html.ActionLink("Matricular Módulos", "IndexModulo")
    </p>
    <p>
        @Html.ActionLink("Matricular Grupos", "IndexGrupo")
    </p>
</div>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.nombres)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.apellidos)
        </th>
        <th>
            Documento
        </th>
        <th>
            Grupo
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.nombres)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.apellidos)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.documento_identificacion)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Grupo.nombre_grupo)
    </td>
    <td>
        @Html.ActionLink("Ver Módulos Matriculados", "Details", new { id = item.usuario_id })
    </td>
</tr>
    }

</table>