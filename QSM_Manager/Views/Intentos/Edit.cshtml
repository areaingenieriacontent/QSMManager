@model IList<QSM_Manager.Models.matricula>

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>
        @using (Html.BeginForm("Edit", "Intentos", FormMethod.Post))
        {
            for (int cont = 0; cont < Model.Count; cont++)
            {
                <div>
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(itemModel => Model[cont].usuario_id, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.Label(Model[cont].usuario.nombres + " " + Model[cont].usuario.apellidos)
                </div>

                <div>
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(itemModel => Model[cont].modulo_id, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.Label(Model[cont].modulo.nombre_modulo)
                </div>

                <div class="col-md-10">
                    @Html.EditorFor(itemModel => Model[cont].habilitado, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(itemModel => Model[cont].habilitado, "", new { @class = "text-danger" })
                </div>

                <div class="col-md-10">
                    @Html.EditorFor(itemModel => Model[cont].intentos, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(itemModel => Model[cont].intentos, "", new { @class = "text-danger" })
                </div>
            }

            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Guardar" class="btn btn-default" />
            </div>
        }

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
