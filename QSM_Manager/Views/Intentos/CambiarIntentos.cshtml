@model IEnumerable<QSM_Manager.Models.matricula>

@{
    ViewBag.Title = "Intentos";
}

<h2>Agregar Intentos</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.usuario.usuario_id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.modulo.nombre_modulo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.habilitado)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.intentos)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        using (Html.BeginForm("Edit", "Intentos", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            <tr>
                <td>
                    @Html.EditorFor(modelItem => item.usuario_id, new { @readonly = true })
                    @Html.ValidationMessageFor(modelItem => item.usuario_id, "", new { @class = "text-danger" })
                </td>
                <td>
                    @Html.EditorFor(modelItem => item.modulo_id, new { disabled = "disabled", htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(modelItem => item.modulo_id, "", new { @class = "text-danger" })
                </td>
                <td>
                    @Html.EditorFor(modelItem => item.habilitado, new { @readonly = true, htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(modelItem => item.habilitado, "", new { @class = "text-danger" })
                </td>
                <td>
                    @Html.EditorFor(modelItem => item.intentos, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(modelItem => item.intentos, "", new { @class = "text-danger" })
                </td>
                <td>
                    <br />
                    <input type="submit" value="Agregar" class="btn btn-default" />
                </td>
            </tr>
        }
    }

</table>